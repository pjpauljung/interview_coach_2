<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Created Questions

    <a data-toggle="collapse" href="#user_created_questions_new_form">
      Add question
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.created_questions.each do |question| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to question, question %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_created_questions_new_form">
        <%= render partial: "users/user_created_questions_new_form" %>
      </div>
    </div>

  </ul>
</div>
