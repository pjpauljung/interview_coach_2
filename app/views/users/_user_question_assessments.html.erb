<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Question Assessments

    <a data-toggle="collapse" href="#user_question_assessments_new_form">
      Add question assessment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.question_assessments.each do |question_assessment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to question_assessment, question_assessment %>
        <!-- Show link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_question_assessments_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "users/user_question_assessments_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
