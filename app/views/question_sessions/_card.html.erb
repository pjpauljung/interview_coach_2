<div class="card mb-3">
  <h2 class="card-header h4">
    Question Session #<%= question_session.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Interviewee</dt>
      <dd>
        <% if @question_session.interviewee.present? %>
          <%= link_to question_session.interviewee, question_session.interviewee %>
        <% end %>
      </dd>

      <dt>Company</dt>
      <dd>
        <% if @question_session.company.present? %>
          <%= link_to question_session.company, question_session.company %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back question_session, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @question_session.interviewee %>
          <%= link_to edit_question_session_url(question_session), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @question_session.interviewee %>
          <%= link_to question_session, method: :delete, data: { confirm: "Do you really want to delete this question_session?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(question_session.updated_at) %> ago
  </div>
</div>
