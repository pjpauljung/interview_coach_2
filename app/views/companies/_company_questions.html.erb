<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Questions

    <a data-toggle="collapse" href="#company_questions_new_form">
      Add question
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @company.questions.each do |question| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to question, question %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to question, method: :delete, data: { confirm: "Do you really want to delete this question" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="company_questions_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "companies/company_questions_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
