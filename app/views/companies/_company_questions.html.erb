<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Questions

    <a data-toggle="collapse" href="#company_questions_new_form">
      Add question
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @company.questions.each do |question| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to question, question %>

        <% if current_user == question.creator %>
          <%= link_to question, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="company_questions_new_form">
        <%= render partial: "companies/company_questions_new_form" %>
      </div>
    </div>

  </ul>
</div>
