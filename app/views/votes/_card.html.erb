<div class="card mb-3">
  <h2 class="card-header h4">
    Vote #<%= vote.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Voter</dt>
      <dd>
        <% if @vote.voter.present? %>
          <%= link_to vote.voter, vote.voter %>
        <% end %>
      </dd>

      <dt>Question</dt>
      <dd>
        <% if @vote.question.present? %>
          <%= link_to vote.question, vote.question %>
        <% end %>
      </dd>

      <dt>Vote type</dt>
      <dd><%= vote.vote_type %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back vote, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @vote.voter %>
          <%= link_to edit_vote_url(vote), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @vote.voter %>
          <%= link_to vote, method: :delete, data: { confirm: "Do you really want to delete this vote?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(vote.updated_at) %> ago
  </div>
</div>
