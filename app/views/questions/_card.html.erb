<div class="card mb-3">
  <h2 class="card-header h4">
    Question #<%= question.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Creator</dt>
      <dd>
        <% if @question.creator.present? %>
          <%= link_to question.creator, question.creator %>
        <% end %>
      </dd>

      <dt>Company</dt>
      <dd>
        <% if @question.company.present? %>
          <%= link_to question.company, question.company %>
        <% end %>
      </dd>

      <dt>Question</dt>
      <dd><%= question.question %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back question, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @question.creator %>
          <%= link_to edit_question_url(question), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @question.creator %>
          <%= link_to question, method: :delete, data: { confirm: "Do you really want to delete this question?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(question.updated_at) %> ago
  </div>
</div>
