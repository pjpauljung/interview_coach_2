<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Votes

    <a data-toggle="collapse" href="#question_votes_new_form">
      Add vote
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @question.votes.each do |vote| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to vote, vote %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to vote, method: :delete, data: { confirm: "Do you really want to delete this vote" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="question_votes_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "questions/question_votes_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
